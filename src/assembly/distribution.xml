<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>distribution</id>
    <formats>
        <format>zip</format>
    </formats>

    <includeBaseDirectory>true</includeBaseDirectory>

    <fileSets>
        <!-- Include the main JAR -->
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>${project.artifactId}-${project.version}.jar</include>
            </includes>
        </fileSet>

        <!-- Include all dependency JARs -->
        <fileSet>
            <directory>${project.build.directory}/lib</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>

        <!-- Include curl and certificates -->
        <fileSet>
            <directory>lib</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>curl.exe</include>
                <include>curl-ca-bundle.crt</include>
            </includes>
        </fileSet>

        <!-- Include JRE -->
        <fileSet>
            <directory>${project.build.directory}/jre</directory>
            <outputDirectory>jre</outputDirectory>
        </fileSet>

        <!-- Include changelog -->
        <fileSet>
            <directory>.</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>changelog.md</include>
                <include>readme.md</include>
                <include>LICENSE</include>
            </includes>
        </fileSet>

        <!-- Include devtool scripts -->
        <fileSet>
            <directory>src/main/groovy/com/nordea/devtool</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>devtool</include>
                <include>devtool.cmd</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>

        <!-- Include devtool.bat from resources -->
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>devtool.bat</include>
                <include>devtool.conf</include>
                <include>install_devtool.cmd</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
    </fileSets>
</assembly>
